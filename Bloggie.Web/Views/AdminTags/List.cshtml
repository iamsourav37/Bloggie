
@model List<Bloggie.Web.Models.Domain.Tag>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1 class="text-center text-dark mt-2">All the Tags</h1>
    </div>
</div>

<div class="container py-5">

    @if (Model is not null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Display Name</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                    
                </tr>
            </thead>
            <tbody class="table-group-divider">

                @foreach (var tag in Model)
                {
                    <tr>
                        <th scope="row">@tag.Id</th>
                        <td>@tag.Name</td>
                        <td>@tag.DisplayName</td>
                        <td><a asp-controller="AdminTags" asp-action="Edit" asp-route-tagId="@tag.Id" class="btn btn-warning">Edit</a></td>
                        <td><a asp-controller="AdminTags" asp-action="Delete" class="btn btn-danger" asp-route-tagId="@tag.Id">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="bg-warning p-5">
            <h1>No tags found</h1>
        </div>
    }

</div>